{
  "name": "@cleotasks/core",
  "version": "1.0.0-beta.4",
  "description": "A distributed task queue system for Node.js, inspired by Celery and BullMQ",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && webpack --mode production",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "dev": "rm -rf dist && webpack --mode development --watch",
    "test": "NODE_ENV=test jest --config jest.config.ts",
    "test:watch": "NODE_ENV=test jest --config jest.config.ts --watch",
    "test:coverage": "NODE_ENV=test jest --config jest.config.ts --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "yarn build && yarn build:types",
    "start": "node dist/server.js",
    "clean": "rimraf dist coverage",
    "example:basic": "ts-node examples/basic.ts",
    "example:advanced": "ts-node examples/advanced.ts"
  },
  "keywords": [
    "task-queue",
    "celery",
    "redis",
    "background-jobs",
    "distributed",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.1",
    "bullmq": "^4.12.0",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.2",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.3",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.5",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.2",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.15",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "bullmq": "^4.12.0",
    "ioredis": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "directories": {
    "example": "examples"
  }
}
